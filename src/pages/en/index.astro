---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);
---

<BaseLayout title={t('home.title')} lang={lang} currentPath="/">
  <section class="hero">
    <h1>Ruedi R. Renggli</h1>
    <p class="subtitle">Composer & Musician</p>
  </section>

  <section class="biography">
    <h2>{t('home.biography')}</h2>
    <div class="bio-content">
      <p>
        Ruedi R. Renggli is a Swiss composer and musician with a deep passion for creative
        musical expression. His compositions blend traditional elements with modern soundscapes.
      </p>
      <p>
        With years of experience in music production, Ruedi has developed a unique style
        that resonates with listeners across different cultures and languages.
      </p>
      <p>
        His works are characterized by melodic depth and harmonic complexity that are both
        emotionally moving and intellectually stimulating.
      </p>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 3rem 0;
    border-bottom: 1px solid #e0e0e0;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.5rem;
    color: #666;
    font-weight: 300;
  }

  .biography {
    max-width: 800px;
    margin: 0 auto;
  }

  .bio-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #555;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1.2rem;
    }
  }
</style>
